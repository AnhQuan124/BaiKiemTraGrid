<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/listdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#fff">

        <ImageView
            android:padding="2dp"
            android:id="@+id/imageView"
            android:scaleType="fitXY"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <TextView
            android:id="@+id/idttchinh"
            android:layout_toRightOf="@+id/imageView"
            android:layout_marginLeft="10dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="Vin Mart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/idgia"
            android:text="Chuỗi siêu thị uy tín. Sản phẩm đa dạng, vận chuyển siêu tốc"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imageView"
            android:layout_below="@id/idttchinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Tích 3%"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imageView"
            android:layout_below="@id/idgia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:drawableStart="@drawable/ic_checkcircle"/>
    </RelativeLayout>

</RelativeLayout>